</div>

<style>
    .extra-small {
        font-size: 0.75rem;
    }

    .description-truncate-results {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        max-height: 2.4em; /* Circa 2 righe (2 * 1.2em) */
        line-height: 1.2em;
    }

    .comic-card .card-title, .comic-card .card-text { /* Stili generici per le card dei fumetti/manga */
        line-height: 1.2;
    }
    /* Stili per uniformare l'aspetto delle card featured e dei risultati di ricerca */
    #searchResultsTabContent .card h-100, .mb-5 .card.h-100 { /* Selettore per entrambe le sezioni */
        /* eventuali stili comuni qui */
    }

    #searchResultsTabContent .card-body, .mb-5 .card-body.p-2 { /* Selettore per entrambe le sezioni */
        padding: 0.75rem !important; /* Forza padding ridotto per entrambe */
    }

    #searchResultsTabContent .card-title, .mb-5 .card-title.small {
        font-size: 0.85rem !important;
        margin-bottom: 0.2rem !important;
    }

    #searchResultsTabContent .card-text, .mb-5 .card-text.extra-small {
        font-size: 0.75rem !important;
        margin-bottom: 0.2rem !important;
    }
</style>

<!-- Modal Dettagli Fumetto (Generic) -->
<div class="modal fade" id="comicDetailsModal" tabindex="-1" aria-labelledby="comicDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="comicDetailsModalLabel">Dettagli Fumetto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img id="modalComicCoverImage" src="/images/placeholder_cover.png" class="img-fluid rounded mb-3" alt="Copertina" style="max-height: 300px; object-fit: contain;">
                    </div>
                    <div class="col-md-8">
                        <h3 id="modalComicTitle"></h3>
                        <p class="text-muted">
                            <span id="modalComicSeries"></span>
                            <span id="modalComicIssue"></span>
                        </p>
                        <dl class="row">
                            <dt class="col-sm-4">Autore:</dt>
                            <dd class="col-sm-8" id="modalComicAuthor"></dd>

                            <dt class="col-sm-4">Editore:</dt>
                            <dd class="col-sm-8" id="modalComicPublisher"></dd>

                            <dt class="col-sm-4">Data Pubblicazione:</dt>
                            <dd class="col-sm-8" id="modalComicPublicationDate"></dd>

                            <dt class="col-sm-4">Pagine:</dt>
                            <dd class="col-sm-8" id="modalComicPageCount"></dd>

                            <dt class="col-sm-4">Fonte Dati:</dt>
                            <dd class="col-sm-8"><span id="modalComicSource"></span> <span id="modalComicSourceIdInfo"></span></dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-3">
                    <h5><i class="bi bi-robot me-1"></i>Approfondimenti IA (Gemini)</h5>
                    <div id="geminiReviewContent" class="p-3 bg-light border rounded">
                        <p id="modalGeminiReviewSummary">Caricamento recensione...</p>
                    </div>
                    <small id="modalEnrichmentStatus" class="text-muted"></small>
                </div>
            </div>
            <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function showDiscoverItemDetails(title, series, issueNumber, author, publisher, publicationDateStr, 
                                         coverImage, description, source, sourceId, pageCount, buttonElement) {
            const originalButtonText = $(buttonElement).find('.button-text').text();
            const spinner = $(buttonElement).find('.spinner-border');
            const icon = $(buttonElement).find('.icon-eye');

            // Disable button and show spinner
            $(buttonElement).prop('disabled', true);
            $(buttonElement).find('.button-text').text('Caricamento...');
            spinner.removeClass('d-none');
            icon.addClass('d-none');

            // Reset modal content before fetching new data
            $('#comicDetailsModalLabel').text('Dettagli');
            $('#modalComicCoverImage').attr('src', '/images/placeholder_cover.png');
            $('#modalComicTitle').text('');
            $('#modalComicSeries').text('');
            $('#modalComicIssue').text('');
            $('#modalComicAuthor').text('');
            $('#modalComicPublisher').text('');
            $('#modalComicPublicationDate').text('');
            $('#modalComicPageCount').text('');
            $('#modalComicSource').text('');
            $('#modalComicSourceIdInfo').text('');
            $('#modalComicDescription').html('');
            $('#modalGeminiReviewSummary').text('Caricamento recensione...');
            $('#modalEnrichmentStatus').text('');
            $('#geminiReviewContent').html('<p id="modalGeminiReviewSummary">Caricamento recensione...</p>');

            // Popola il modale con i dati basic
            $('#comicDetailsModalLabel').text('Dettagli: ' + title);
            $('#modalComicCoverImage').attr('src', coverImage || '/images/placeholder_cover.png').on('error', function() { $(this).attr('src', '/images/placeholder_cover.png'); });
            $('#modalComicTitle').text(title || 'N/A');
            $('#modalComicSeries').text(series || 'N/A');
            if (issueNumber && parseInt(issueNumber) > 0) {
                $('#modalComicIssue').text(' #' + issueNumber);
            } else {
                $('#modalComicIssue').text('');
            }
            $('#modalComicAuthor').text(author || 'N/A');
            $('#modalComicPublisher').text(publisher || 'N/A');
            $('#modalComicPublicationDate').text(publicationDateStr ? new Date(publicationDateStr).toLocaleDateString() : 'N/A');
            $('#modalComicPageCount').text(pageCount || 'N/A');
            $('#modalComicSource').text(source || 'N/A');
            $('#modalComicSourceIdInfo').text(sourceId ? '(ID: ' + sourceId + ')' : '');
            
            // Richiedi i dettagli aggiuntivi tramite Gemini
            $.ajax({
                url: `/Discover/Index?handler=ItemDetailsForGemini&title=${encodeURIComponent(title)}&series=${encodeURIComponent(series)}&author=${encodeURIComponent(author)}&publisher=${encodeURIComponent(publisher)}&source=${encodeURIComponent(source)}&sourceId=${encodeURIComponent(sourceId)}&description=${encodeURIComponent(description)}`,
                method: 'GET',
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN", 
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                },
                success: function (data) {
                    // Restore button state
                    $(buttonElement).prop('disabled', false);
                    $(buttonElement).find('.button-text').text(originalButtonText);
                    spinner.addClass('d-none');
                    icon.removeClass('d-none');

                    if (data.error) {
                        $('#geminiReviewContent').html(`<p class="text-danger">Errore nel recupero della recensione.</p>`);
                        $('#modalEnrichmentStatus').text(data.error);
                    } else {
                        let reviewHtml = '<p>Recensione non disponibile o API Key non configurata.</p>';
                        if (data.geminiReviewSummary) {
                            let summaryText = data.geminiReviewSummary;
                            let formattedSummary = '';

                            const positiveHeaderIt = "Lati Positivi:";
                            const negativeHeaderIt = "Lati Negativi:";
                            const positiveHeaderEn = "Positive Traits:";
                            const negativeHeaderEn = "Negative Traits:";

                            let actualPositiveHeader = summaryText.includes(positiveHeaderIt) ? positiveHeaderIt : (summaryText.includes(positiveHeaderEn) ? positiveHeaderEn : null);
                            let actualNegativeHeader = summaryText.includes(negativeHeaderIt) ? negativeHeaderIt : (summaryText.includes(negativeHeaderEn) ? negativeHeaderEn : null);
                            
                            let contentAfterPositive = "";
                            let positiveTraitsSection = "";
                            let negativeTraitsSection = "";

                            if (actualPositiveHeader) {
                                formattedSummary += `<h6 class="text-success mt-2"><i class="bi bi-hand-thumbs-up-fill me-1"></i>${actualPositiveHeader}</h6>`;
                                let startPosIdx = summaryText.indexOf(actualPositiveHeader) + actualPositiveHeader.length;
                                contentAfterPositive = summaryText.substring(startPosIdx);
                                
                                let endPosIdx = actualNegativeHeader ? contentAfterPositive.indexOf(actualNegativeHeader) : -1;
                                positiveTraitsSection = (endPosIdx !== -1) ? contentAfterPositive.substring(0, endPosIdx).trim() : contentAfterPositive.trim();

                                if (positiveTraitsSection) {
                                    formattedSummary += '<ul class="list-unstyled ps-3>';
                                    positiveTraitsSection.split(/\n/).forEach(item => {
                                        let trait = item.trim();
                                        if (trait.startsWith("*")) {
                                            trait = trait.substring(1).trim();
                                        }
                                        if (trait) {
                                            formattedSummary += `<li><i class="bi bi-check-circle-fill text-success me-2"></i>${trait}</li>`;
                                        }
                                    });
                                    formattedSummary += '</ul>';
                                }
                            }

                            if (actualNegativeHeader) {
                                formattedSummary += `<h6 class="text-danger mt-3"><i class="bi bi-hand-thumbs-down-fill me-1"></i>${actualNegativeHeader}</h6>`;
                                let startNegIdx = summaryText.indexOf(actualNegativeHeader) + actualNegativeHeader.length;
                                let searchBaseForNegative = actualPositiveHeader && summaryText.indexOf(actualNegativeHeader) > summaryText.indexOf(actualPositiveHeader) ? contentAfterPositive : summaryText;
                                startNegIdx = searchBaseForNegative.indexOf(actualNegativeHeader) + actualNegativeHeader.length;
                                negativeTraitsSection = searchBaseForNegative.substring(startNegIdx).trim();
                                
                                if (negativeTraitsSection) {
                                    formattedSummary += '<ul class="list-unstyled ps-3>';
                                    negativeTraitsSection.split(/\n/).forEach(item => {
                                        let trait = item.trim();
                                        if (trait.startsWith("*")) {
                                            trait = trait.substring(1).trim();
                                        }
                                        if (trait) {
                                            formattedSummary += `<li><i class="bi bi-x-circle-fill text-danger me-2"></i>${trait}</li>`;
                                        }
                                    });
                                    formattedSummary += '</ul>';
                                }
                            }
                            
                            if (!formattedSummary && summaryText) {
                                reviewHtml = summaryText.replace(/\n/g, '<br>');
                            } else if (formattedSummary) {
                                reviewHtml = formattedSummary;
                            }
                        }
                        $('#geminiReviewContent').html(reviewHtml);
                    }

                    $('#comicDetailsModal').modal('show');
                },
                error: function (xhr, status, error) {
                    // Restore button
                    $(buttonElement).prop('disabled', false);
                    $(buttonElement).find('.button-text').text(originalButtonText);
                    spinner.addClass('d-none');
                    icon.removeClass('d-none');

                    console.error('Errore nel recupero dei dettagli:', error, xhr.responseText);
                    $('#geminiReviewContent').html('<p class="text-danger">Errore AJAX nel caricare i dettagli.</p>');
                    $('#modalEnrichmentStatus').text('Consultare la console per dettagli sull\'errore.');
                    $('#comicDetailsModal').modal('show');
                }
            });
        }
    </script>
}