@page
@model ComicCollector.Pages.Discover.IndexModel
@using ComicCollector.Models
@{
    ViewData["Title"] = "Scopri nuovi fumetti e manga";
    var defaultCoverPlaceholder = "https://via.placeholder.com/300x450/e9ecef/6c757d?text=Copertina+N/D";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-lg-8 mx-auto text-center">
            <h1 class="display-5 fw-bold mb-3">Scopri Fumetti e Manga</h1>
            <p class="lead text-muted">Esplora migliaia di titoli da ComicVine e MangaDex.</p>
        </div>
    </div>

    @if (TempData["StatusMessage"] != null)
    {
        var isError = (bool)(TempData["IsError"] ?? false);
        var statusClass = isError ? "danger" : "success";
        <div class="alert alert-@statusClass alert-dismissible fade show mb-4" role="alert">
            @TempData["StatusMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-5">
        <div class="col-lg-9 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form method="get">
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" asp-for="SearchQuery" class="form-control form-control-lg" placeholder="Titolo, serie, autore..." autofocus>
                            <button class="btn btn-primary btn-lg" type="submit"><i class="bi bi-search"></i> Cerca</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Sezione Featured Items -->
    @if (!Model.ShowSearchResults && Model.FeaturedItems.Any())
    {
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h4 mb-0">Titoli in Evidenza</h2>
            </div>
            @* Usa la stessa struttura dei risultati di ricerca per coerenza *@
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var item in Model.FeaturedItems)
                {
                    if (item is Comic comic)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="row g-0 h-100">
                                    <div class="col-4 col-sm-5">
                                        <img src="@(string.IsNullOrEmpty(comic.CoverImage) ? defaultCoverPlaceholder : comic.CoverImage)"
                                             onerror="this.onerror=null;this.src='@defaultCoverPlaceholder';"
                                             class="img-fluid rounded-start w-100 h-100" alt="Copertina @comic.Title" style="object-fit: cover;">
                                    </div>
                                    <div class="col-8 col-sm-7 d-flex flex-column">
                                        <div class="card-body p-3">
                                            <h6 class="card-title text-truncate mb-1" title="@comic.Title">@comic.Title</h6>
                                            <p class="card-text text-muted extra-small mb-1 text-truncate" title="@comic.Series">
                                                @comic.Series @if (comic.IssueNumber.HasValue && comic.IssueNumber > 0)
                                                {
                                                    <text>#@comic.IssueNumber</text>
                                                }
                                            </p>
                                            <p class="card-text extra-small mb-1 text-truncate" title="@comic.Author"><i class="bi bi-person"></i> @comic.Author</p>
                                            <p class="card-text extra-small text-muted mb-2">
                                                <i class="bi bi-calendar3"></i> @comic.PublicationDate.ToString("MMM yyyy")
                                            </p>
                                            <p class="card-text extra-small description-truncate-results d-none d-sm-block">
                                                @(string.IsNullOrEmpty(comic.Description) ? "Nessuna descrizione." : comic.Description)
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 p-3 pt-0 mt-auto">
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-sm btn-outline-primary flex-grow-1 comic-details-btn" 
                                                        onclick="showDiscoverItemDetails('@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.Title)', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.Series)', 
                                                                    '@(comic.IssueNumber?.ToString() ?? "0")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.Author ?? "")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.Publisher ?? "N/A")', 
                                                                    '@comic.PublicationDate.ToString("yyyy-MM-dd")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.CoverImage ?? "")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(comic.Description ?? "")', 
                                                                    '@(comic.Source ?? "ComicVine")', 
                                                                    '@comic.SourceId', 
                                                                    '@(comic.PageCount?.ToString() ?? "0")', 
                                                                    this)">
                                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                    <i class="bi bi-eye icon-eye"></i>
                                                    <span class="button-text">Dettagli</span>
                                                </button>
                                                <form method="post" asp-page="/Collection/Index" asp-page-handler="AddToCollectionFromDiscover">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="title" value="@comic.Title" />
                                                    <input type="hidden" name="series" value="@comic.Series" />
                                                    <input type="hidden" name="issueNumber" value="@(comic.IssueNumber ?? 0)" />
                                                    <input type="hidden" name="author" value="@comic.Author" />
                                                    <input type="hidden" name="publisher" value="@(comic.Publisher ?? "N/A")" />
                                                    <input type="hidden" name="publicationDateStr" value="@comic.PublicationDate.ToString("o")" />
                                                    <input type="hidden" name="coverImage" value="@comic.CoverImage" />
                                                    <input type="hidden" name="description" value="@(comic.Description ?? "")" />
                                                    <input type="hidden" name="source" value="@comic.Source" />
                                                    <input type="hidden" name="sourceId" value="@comic.SourceId" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Aggiungi alla collezione">
                                                        <i class="bi bi-plus-circle"></i> Aggiungi
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else if (item is MangaViewModel manga)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="row g-0 h-100">
                                    <div class="col-4 col-sm-5">
                                        <img src="@(string.IsNullOrEmpty(manga.CoverImageUrl) ? defaultCoverPlaceholder : manga.CoverImageUrl)"
                                             onerror="this.onerror=null;this.src='@defaultCoverPlaceholder';"
                                             class="img-fluid rounded-start w-100 h-100" alt="Copertina @manga.Title" style="object-fit: cover;">
                                    </div>
                                    <div class="col-8 col-sm-7 d-flex flex-column">
                                        <div class="card-body p-3">
                                            <h6 class="card-title text-truncate mb-1" title="@manga.Title">@manga.Title</h6>
                                            <p class="card-text text-muted extra-small mb-1">@manga.Status</p>
                                            <p class="card-text extra-small mb-1 text-truncate" title="@manga.Author"><i class="bi bi-person"></i> @manga.Author</p>
                                            <p class="card-text extra-small text-muted mb-2">
                                                <i class="bi bi-calendar3"></i> @(manga.Year.HasValue ? manga.Year.ToString() : "N/A")
                                            </p>
                                            <p class="card-text extra-small description-truncate-results d-none d-sm-block">
                                                @(string.IsNullOrEmpty(manga.Description) ? "Nessuna descrizione." : manga.Description)
                                            </p>
                                        </div>
                                        <div class="card-footer bg-transparent border-0 p-3 pt-0 mt-auto">
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-sm btn-outline-primary flex-grow-1 comic-details-btn" 
                                                        onclick="showDiscoverItemDetails('@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(manga.Title)', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode("Manga")', 
                                                                    '0', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(manga.Author ?? "")', 
                                                                    'N/A', 
                                                                    '@manga.PublicationDateForSort.ToString("yyyy-MM-dd")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(manga.CoverImageUrl ?? "")', 
                                                                    '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(manga.Description ?? "")', 
                                                                    '@(manga.Source ?? "MangaDex")', 
                                                                    '@manga.Id', 
                                                                    '0', 
                                                                    this)">
                                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                                    <i class="bi bi-eye icon-eye"></i>
                                                    <span class="button-text">Dettagli</span>
                                                </button>
                                                <form method="post" asp-page="/Collection/Index" asp-page-handler="AddToCollectionFromDiscover">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="title" value="@manga.Title" />
                                                    <input type="hidden" name="series" value="Manga" />
                                                    <input type="hidden" name="issueNumber" value="0" />
                                                    <input type="hidden" name="author" value="@manga.Author" />
                                                    <input type="hidden" name="publisher" value="N/A" />
                                                    <input type="hidden" name="publicationDateStr" value="@manga.PublicationDateForSort.ToString("o")" />
                                                    <input type="hidden" name="coverImage" value="@manga.CoverImageUrl" />
                                                    <input type="hidden" name="description" value="@(manga.Description ?? "")" />
                                                    <input type="hidden" name="source" value="@manga.Source" />
                                                    <input type="hidden" name="sourceId" value="@manga.Id" />
                                                    <button type="submit" class="btn btn-sm btn-success" title="Aggiungi alla collezione">
                                                        <i class="bi bi-plus-circle"></i> Aggiungi
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }

