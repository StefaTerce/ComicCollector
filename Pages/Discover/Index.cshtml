                        </button>
                    </li>
                }
                @if (Model.MangaDexResults.Any())
                {
                    <li class="nav-item" role="presentation">
                        <button class="nav-link @((!Model.ComicVineResults.Any() && Model.MangaDexResults.Any()) ? "active" : "")" id="manga-tab" data-bs-toggle="tab" data-bs-target="#manga-results" type="button" role="tab" aria-controls="manga-results" aria-selected="@((!Model.ComicVineResults.Any() && Model.MangaDexResults.Any()))">
                            Manga (@Model.MangaDexResults.Count)
