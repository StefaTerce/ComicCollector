@page
@model ComicCollector.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}
<h1>Top @Model.TypeTitle</h1>
<div class="row">
    @foreach (var item in Model.TopCards)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height:200px; object-fit:cover;" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description.Substring(0, Math.Min(100, item.Description.Length))...</p>
                    <p><strong>Categorie: </strong>@item.Categories</p>
                    <a asp-page="/Details" asp-route-id="@item.Id" asp-route-type="@Model.Type" class="btn btn-primary">Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>
