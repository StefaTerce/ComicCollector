@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <h1 class="display-5 fw-bold mb-4">La tua Collezione</h1>

    <div class="row mb-5">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="my-0 fw-normal">I tuoi Fumetti Recenti</h5>
                    <a asp-page="/Comics/Index" class="btn btn-sm btn-outline-primary">Vedi tutti</a>
                </div>
                <div class="card-body">
                    @if (Model.DashboardData.RecentComics.Any())
                    {
                        <div class="list-group">
                            @foreach (var comic in Model.DashboardData.RecentComics)
                            {
                                <a asp-page="/Comics/Details" asp-route-id="@comic.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3">
                                    @if (!string.IsNullOrEmpty(comic.CoverImageUrl))
                                    {
                                        <img src="@comic.CoverImageUrl" class="rounded flex-shrink-0" width="60" height="90" alt="@comic.Title">
                                    }
                                    else
                                    {
                                        <div class="rounded flex-shrink-0 bg-secondary text-white d-flex align-items-center justify-content-center" style="width:60px;height:90px;">
                                            <i class="bi bi-book" style="font-size: 1.5rem;"></i>
                                        </div>
                                    }
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">@comic.Title</h6>
                                            <p class="mb-0 opacity-75">@(string.IsNullOrEmpty(comic.Authors) ? "Unknown Author" : comic.Authors)</p>
                                        </div>
                                        @if (comic.IsFavorite)
                                        {
                                            <small class="text-danger"><i class="bi bi-heart-fill"></i></small>
                                        }
                                    </div>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-book" style="font-size: 3rem;"></i>
                            <p class="lead mt-2">Nessun fumetto nella tua collezione</p>
                            <a asp-page="/Comics/Search" class="btn btn-primary mt-2">Cerca Fumetti</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
