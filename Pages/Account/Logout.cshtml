@page
@model ComicCollector.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center py-5">
                    <h2>Disconnessione</h2>
                    <p class="mb-4">Sei sicuro di voler uscire dall'account?</p>

                    <form method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="bi bi-box-arrow-right me-2"></i>Esci
                        </button>
                    </form>

                    <a href="javascript:history.back();" class="btn btn-outline-secondary btn-lg ms-2 px-4">
                        <i class="bi bi-arrow-left me-2"></i>Indietro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>